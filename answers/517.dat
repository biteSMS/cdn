#include <math.h>
#include <stdio.h>
int main() {
  float a, c;
  char b;
  printf("Please enter the expression:\n");
  scanf("%f %c%f", &a, &b, &c);
  switch (b) {
  case '+':
    printf("%f + %f = %f\n", a, c, a + c);
    break;
  case '-':
    printf("%f - %f = %f\n", a, c, a - c);
    break;
  case 'x':
    printf("%f * %f = %f\n", a, c, a * c);
    break;
  case '*':
    printf("%f * %f = %f\n", a, c, a * c);
    break;
  case '/':
    if (c == 0) {
      printf("Division by zero!\n");
      break;
    } else {
      printf("%f / %f = %f \n", a, c, a / c);
      break;
    }
  case '^':
    printf("%f ^ %f =%f\n", a, c, pow(a, c));
    break;
  default:
    printf("Invalid operator! \n");
  }
  return 0;
}

