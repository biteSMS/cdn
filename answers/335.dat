#include <stdio.h>
#include <string.h>
int main() {
  int count = 0, line = 0, words = 0;
  char x;
  while ((x = getchar()) != -1) {
    if (x == '\n') {
      line++;
    }
    if (x == '\n' || x == '\t' || x == ' ') {
      words++;
    }
    count++;
  }
  printf("Lines=%d\nWords=%d\nChars=%d\n", line, words, count);
}

