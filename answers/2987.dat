#include <stdio.h>
#include <stdlib.h>
int main() {
  int n, i, k;
  printf("Input n:\n");
  scanf("%d", &n);
  for (i = 1; i <= n; i++) {
    for (k = 1; k <= n - i; k++) {
      printf(" ");
    }
    printf("*");
    for (k = 1; k < i; k++) {
      printf("**");
    }
    printf("\n");
  }
}

