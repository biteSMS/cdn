#include <stdio.h>
void printMap(int n) {
  int i, j, k;
  for (i = 0; i < n; i++) {
    for (j = i + 1; j < n; j++) {
      printf(" ");
    }
    for (k = 0; k < 2 * i + 1; k++) {
      printf("*");
    }

    printf("\n");
  }
}
void main() {
  int n;
  printf("Input n:\n");
  scanf("%d", &n);
  printMap(n);
}


