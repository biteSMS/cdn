#include <stdio.h>

int main() {
  printf("请输入10个学生的C成绩：\n");
  int i, num[10] = {0}, max = -1, max_ = 0, min = 1001, min_ = 0, sum = 0;
  for (i = 0; i < 10; i++) {
    scanf("%d", &num[i]);
    sum += num[i];
    if (num[i] > max) {
      max = num[i];
      max_ = i;
    }
    if (num[i] < min) {
      min = num[i];
      min_ = i;
    }
  }
  printf("10个学生的C成绩分别为：\n");
  for (i = 0; i < 10; i++) {
    printf("%d ", num[i]);
  }
  printf("\n");
  printf("最高成绩是%d,是第%d个学生\n", max, max_ + 1);
  printf("最低成绩是%d,是第%d个学生\n", min, min_ + 1);
  printf("10名学生的C成绩的平均分为:%.2f\n", (float)sum / 10);
}

