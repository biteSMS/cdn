#include <stdio.h>
#include <string.h>
main() {
  char str[100];
  char *p = str;
  int sum1 = 0, sum2 = 0, i = 0;
  printf("input the string：\n");
  scanf("%s", str);
  while (i < strlen(str)) {
    if (p[i] >= 48 && p[i] <= 57)
      ++sum1;
    else if (p[i] >= 'e' && p[i] <= 'k')
      ++sum2;
    i++;
  }
  printf("the amount of the letters between e and k:%d\n", sum2);
  printf("the amount of the figure:%d\n", sum1);
}

