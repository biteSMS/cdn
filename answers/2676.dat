int CountWordAndReplaceBlank(char string[]) {
  char *p = string;
  int k;
  if (*p)
    k = 1;
  else
    return 0;
  while (*p) {
    if (*p == ' ') {
      *p = '*';
      k++;
    }
    p++;
  }
  return k;
}

