int CountWordAndReplaceBlank(char string[]) {
  int i, j = 0;
  for (i = 0; string[i] != '\0'; i++) {
    if (string[i] == ' ' && string[i + 1] != ' ' && string[i - 1] != ' ') {
      j++;
    }
  }
  return j + 1;
}
