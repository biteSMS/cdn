#include <math.h>
#include <stdio.h>
main() {
  int x;
  float y;
  printf("Input x: ");
  scanf("%d", &x);
  if (x > 0) {
    y = exp(-x);
    printf("y=%f\n", y);
  } else if (x == 0) {
    y = 1;
    printf("y=%f\n", y);
  } else {
    y = -exp(x);
    printf("y=%f\n", y);
  }
}

