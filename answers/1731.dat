#include <math.h>
#include <stdio.h>
void main() {
  int x;
  float e = 2.718281828459;
  float y;
  printf("Input x: ");
  scanf("%d", &x);
  if (x > 0) {
    y = pow(e, -x);
  } else if (x < 0) {
    y = -pow(e, x);
  } else {
    y = 1;
  }
  printf("y=%f\n", y);
}


