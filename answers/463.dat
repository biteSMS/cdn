#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
  int month;
  int day;
  int year;
  int i;
  char *temp;
  char *str[12] = {"January",   "February", "March",    "April",
                   "May",       "June",     "July",     "August",
                   "September", "October",  "November", "December"};

  do {
    printf("Enter date (mm/dd/yy):");
    scanf("%d/%d/%d", &month, &day, &year);
  } while (!(month > 0 && month < 13 && day > 0 && day < 32));
  for (i = 0; i < 12; i++) {
    if (i == month - 1)
      temp = str[i];
  }
  printf("Dated this %d", day);
  switch (day) {
  case 1:
    printf("st");
    break;
  case 2:
    printf("nd");
    break;
  case 3:
    printf("rd");
    break;
  case 21:
    printf("st");
    break;
  case 22:
    printf("nd");
    break;
  case 23:
    printf("rd");
    break;
  default:
    printf("th");
    break;
  }
  printf(" day of ");
  printf("%s", temp);
  printf(", 19%.2d.\n", year);

  return 0;
}


