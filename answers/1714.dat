#include <stdio.h>
int main() {
  int n, cnt = 0, sum = 0, i;
  printf("Input 20 Numbers:\n");
  for (i = 0; i < 20; i++) {
    scanf("%d", &n);
    if (n >= 0) {
      cnt++;
      sum += n;
    }
  }
  printf("sum = %d, counter = %d\n", sum, cnt);
  return 0;
}

