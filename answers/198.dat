#include <math.h>
#include <stdio.h>
#include <stdlib.h>

int IsPerfect(int x) {
  int y, i, m = 1;
  y = sqrt(x);
  for (i = 2; i <= y; i++) {
    if (x % i == 0) {
      m += i + x / i;
    }
  }
  return m == x ? 1 : 0;
}

int main() {
  int m;
  printf("Input m:\n");
  scanf("%d", &m);
  if (m == 1)
    printf("%d is not a perfect number\n", m);
  else {
    if (IsPerfect(m))
      printf("%d is a perfect number\n", m);
    else
      printf("%d is not a perfect number\n", m);
  }
  return 0;
}


