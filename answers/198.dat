#include <stdio.h>
#define size 100
int IsPerfect(int x) {
  int a[size], i, j = 0, t, sum = 0;
  for (i = 1; i < x; i++) {
    if (x % i == 0) {
      a[j] = i;
      j++;
    }
  }
  for (t = 0; t < j; t++) {
    sum += a[t];
  }
  if (x == sum) {
    return 1;
  } else {
    return 0;
  }
}
main() {
  int m, flag = 1;
  printf("Input m:\n");
  scanf("%d", &m);
  flag = IsPerfect(m);
  if (flag) {
    printf("%d is a perfect number\n", m);
  } else {
    printf("%d is not a perfect number\n", m);
  }
}

