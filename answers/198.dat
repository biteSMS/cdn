#include <stdio.h>
int IsPerfect(int x) {
  int i, m;
  printf("Input m:\n");
  scanf("%d", &m);
  if (x == 1)
    printf("%d is not a perfect number\n", x); // 1本身就是一个完数
  else {
    m = 0; //初置各约数和的值为0，因为最开始和是从0算起的
    for (i = x - 1; i > 0; i--)
      if (x % i == 0)
        m += i; // m其实是各公约数之和(不包括n本身)
    if (m == x)
      printf("%d is a perfect number\n", x); // m在退出循环时，
    // 要是完数的话必定与n相等否则就不是完数
    else
      printf("%d is not a perfect number\n", x);
  }
  return 0;
}
main() {
  int x;
  scanf("%d", &x); //从键盘输入一个数
  IsPerfect(x);    //调用函数
}

