#include <stdio.h>
#include <stdlib.h>
int main() {
  int a[10], b[10], i, j, temp;
  printf("Input 10 numbers:");
  //像原数组中输入10个数
  for (i = 0; i < 10; i++) {
    scanf("%d", &a[i]);
  }
  //对数组a进行排序
  for (i = 0; i < 9; i++) {
    for (j = i + 1; j < 10; j++) {
      if (a[i] > a[j]) {
        temp = a[i];
        a[i] = a[j];
        a[j] = temp;
      }
    }
  }
  //将奇数复制给b
  j = 0;
  for (i = 0; i < 10; i++) {
    if (a[i] % 2 != 0) {
      b[j] = a[i];
      j++;
    }
  }
  //将偶数复制给b
  for (i = 0; i < 10; i++) {
    if (a[i] % 2 == 0) {
      b[j] = a[i];
      j++;
    }
  }
  printf("Output: ");
  for (i = 0; i < 9; i++) {
    printf("%d,", b[i]);
  }
  printf("%d\n", b[9]);
  return 0;
}


