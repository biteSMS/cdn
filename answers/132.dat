#include <stdio.h>
#include <stdlib.h>
#define N 100
int Average(int score[], int n) {
  int i, sum = 0;

  for (i = 0; i < n; i++) {
    sum += score[i];
  }
  return sum / i;
}
int main() {
  int aver, n = 0;
  int score[N];
  printf("Input score: (输入负数结束)\n");
  do {
    scanf("%d", &score[n]);
    n++;
  } while (score[n - 1] >= 0);
  n--;
  aver = Average(score, n);
  printf("Total students are %d\n", n);
  printf("Average score is %d\n", aver);
  return 0;
}

