  for (i = 0; i < N; i++) {
    scanf("%d", &score[i]);
    if (score[i] < 0)
      break;
  }
  Average(score, N);
  printf("Total students are %d\n", i);
  printf("Average score is %d\n", Average(score, N));
  return 0;
}
int Average(int score[], int n) {
  int i, sum = 0, aver;
  for (i = 0; i < n; i++) {
    sum = sum + score[i];
    if (score[i] < 0) {
      sum = sum - score[i];
      break;
    }
  }
  aver = sum / i;
  return aver;
}


