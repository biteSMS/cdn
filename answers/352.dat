#include <math.h>
#include <stdio.h>
void print(int space, int num, int type) {
  while (space--)
    putchar(' ');
  if (type) {
    while (num--)
      putchar('*');
    putchar('\n');
  } else {
    putchar('*');
    num = (num > 2) ? num - 2 : 0;
    while (num--)
      putchar(' ');
    putchar('*');
    putchar('\n');
  }
}

void hollow(int n) //¿ÕÐÄ
{
  int i;
  print(n - 1, n, 1);
  for (i = 1; i < 2 * n - 2; i++)
    print(abs(n - i - 1), 3 * n - 2 - 2 * abs(n - i - 1), 0);
  print(n - 1, n, 1);
}
int main() {
  int n;
  printf("Enter length:");
  while (scanf("%d", &n) != EOF) {

    hollow(n);
  }
  return 0;
}


