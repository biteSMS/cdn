#include <stdio.h>
#include <stdlib.h>

int Gcd(int a, int b);
int main() {
  int a, b, n;
  printf("Input a,b:");
  scanf("%d,%d", &a, &b);

  n = Gcd(a, b);
  if (n == -1)
    printf("Input error!\n");
  else
    printf("Gcd=%d\n", n);

  return 0;
}
int Gcd(int a, int b) {
  int flag = -1;

  if (a > 0 && b > 0) {
    if (a > b)
      flag = Gcd(a - b, b);
    else if (a < b)
      flag = Gcd(a, b - a);
    else if (a == b)
      flag = a;
  }

  return flag;
}

