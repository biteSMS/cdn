      scanf("%d", &a[i][j]);

  for (i = 0; i < 2; i++) {
    h[i] = max(a, i);
    l[i] = min(a, h[i]);
    if (l[i] == 1000)
      continue;
    if (i == l[i]) {
      printf("%d\n", a[i][h[i]]);

