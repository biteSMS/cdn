#include <stdio.h>
int max(int a[][6], int i) {
  int n = a[i][0];
  int j, k;
  for (j = 0; j < 6; j++) {
    if (a[i][j] >= n) {
      n = a[i][j];
      k = j;
    }
  }
  return k;
}
int min(int a[][6], int j) {

  int n = a[0][j];
  int i, k = 0, x = 0;
  for (i = 0; i < 2; i++) {
    if (n == a[i][j]) {
      x++;

    } else if (n > a[i][j]) {
      n = a[i][j];
      k = i;
    }
  }
  if (x > 1)
    return 1000;
  else
    return k;
}
void main() {
  int a[2][6];
  int i, j, h[2], l[2], k = 0;
  for (i = 0; i < 2; i++)
