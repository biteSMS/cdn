#include <stdio.h>
main() {
  int a, b, c, s;
  printf("There are following friendly-numbers pair smaller than 3000:\n");
  for (a = 2; a <= 3000; a++) {
    s = 0;
    c = 0;
    for (b = 1; b <= a / 2; b++) {
      if (a % b == 0)
        s += b;
    }
    for (b = 1; b <= s / 2; b++) {
      if (s % b == 0)
        c = c + b;
    }
    if (c == a && s < a) {
      printf("   %4d..%4d", s, a);
    }
  }
}


