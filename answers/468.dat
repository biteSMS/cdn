#include <stdio.h>
int main() {
  int n, i, j, num[50];
  n = 10;

  printf("Enter %d numbers:", n);
  for (i = 0; i < n; i++) {
    scanf("%d", &num[i]);
  }
  printf("In reverse order:");
  for (i = i - 1; i >= 0; i--) {
    printf(" %d", num[i]);
  }
  return 0;
}


