#include <stdio.h>
#include <stdlib.h>

int Check(long num1, long num2) {
  static int i = 1;
  long n = num1;

  do {
    num2 = num2 * 10 + n % 10;
    n /= 10;
  } while (n > 0);

  n = num1 + num2;

  do {
    n /= 10;
  } while (n >= 10);

  if (n == ((num1 + num2) % 10)) {
    printf("   [%d]: %ld+%ld=%ld\n", i++, num1, num2, num1 + num2);
    printf("Here we reached the aim at last !\n");
  } else {
    printf("   [%d]: %ld+%ld=%ld\n", i++, num1, num2, num1 + num2);
    Check(num1 + num2, 0);
  }
}

int main() {
  long num1, num2 = 0;

  printf("please enter a number optionaly:");
  scanf("%ld", &num1);

  printf("The generation process of palindrome:\n");
  Check(num1, num2);

  return 0;
}

