#include <stdio.h>
int main() {
  int n, i, j;
  printf("Input n:\n");
  scanf("%d", &n);
  for (i = 0; i < n; i++) {
    for (j = 0; j < 2 * i + 1; j++) {
      printf("*");
    }
    printf("\n");
  }
}

