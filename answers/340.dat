#include <stdio.h>
#define N 100
int main() {
  int x = 0, y = 0, z = 0;
  char a[N];
  int i = 0;
  a[i] = getchar();
  while (a[i] != '\\') {
    i++;
    a[i] = getchar();
    if (a[i] > '0' && a[i] < '9')
      x++;
    else if (a[i] == '+' || a[i] == '-' || a[i] == '*' || a[i] == '/' ||
             a[i] == '%' || a[i] == '=')
      y++;
    else
      z++;
  }
  z++;
  printf("class1=%d, class2=%d, class3=%d\n", x, y, z);
  return 0;
}

