#include <stdio.h>
main() {
  int class1, class2, class3;
  char ch;
  class1 = class2 = class3 = 0; /* 初始化分类计数器 */
  do {
    ch = getchar();
    switch (ch) {
    case '0':
    case '1':
    case '2':
    case '3':
    case '4':
    case '5':
    case '6':
    case '7':
    case '8':
    case '9':
      class1++;
      break; /* 对分类１计数 */
    case '+':
    case '-':
    case '*':
    case '/':
    case '%':
    case '=':
      class2++;
      break; /* 对分类２计数 */
    default:
      class3++;
      break; /* 对分类３计数 */
    }
  } while (ch != '\\'); /* 字符'\'在C程序中要使用转义符'\\' */
  printf("class1=%d, class2=%d, class3=%d\n", class1, class2, class3);
}

