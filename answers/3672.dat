#include <stdio.h>
#include <string.h>
void reverse(char *s) {
  char *t = s + strlen(s) - 1;
  char temp;
  while (s <= t) {
    temp = *t;
    *t = *s;
    *s = temp;
    s++;
    t--;
  }
}
int main() {
  char str[100];
  printf("Please Enter String1:\n");
  gets(str);
  reverse(str);
  printf("Result is:\n%s\n", str);
}

