#include <math.h>
#include <stdio.h>
int main() {
  int m, i = 1, j = 1;
  int n;
  int a;
  int sum = 0;
  printf("Input the number:");
  scanf("%d", &n);
  m = n;
  while (m / 10 > 0) {
    j++;
    m = m / 10;
  }
  for (i = 1; i <= j; i++) {

    a = n - n / 10 * 10;
    sum = sum + a * pow(10, (j - i + 1));
    n = n / 10;
  }
  printf("%d", sum / 10);
  return 0;
}

