#include <stdio.h>
#include <stdlib.h>
int main() {
  int n, i = 0;
  printf("Input the number:");
  scanf("%d", &n);
  for (; n >= 10; n /= 10) {
    i = (i + n % 10) * 10;
  }
  i += n;
  printf("%d", i);
  return 0;
}

