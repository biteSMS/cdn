#include <math.h>
#include <stdio.h>
#include <string.h>
int main() {
  char s1[60];
  int i = 0, x;
  char *pStart;
  char *pEnd;
  printf("Input a string:\n");
  gets(s1);
  pStart = s1;
  x = strlen(s1) - 1;
  pEnd = (pStart + x);
  do {
    i++;
  } while ((*(pStart + i) == *(pEnd - i)) && (i <= x));
  if (i - 1 == x) {
    printf("This string is a plalindrome.");
  } else {
    printf("This string is not a plalindrome.");
  }
  return 0;
}

