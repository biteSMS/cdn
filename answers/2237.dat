#include <stdio.h>
#include <string.h>
int main() {
  char a[100], *pS, *pE;
  int l, i = 1;
  printf("Input a string:\n");
  gets(a);
  l = strlen(a);
  pS = &a[0], pE = &a[l - 1];
  do {
    if (*pS != *pE)
      break;
    pS++;
    pE--;
  } while (pS < pE);
  if (pS < pE)
    printf("This string is not a plalindrome.");
  else
    printf("This string is a plalindrome.");
  return 0;
}
