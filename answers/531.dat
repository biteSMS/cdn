int sum(int x) {
  int i, sum = 1;
  for (i = x; i > 0; i--) {
    sum *= i;
  }
  return sum;
}

main() {
  int m, k;
  double p;
  while (1) {
    printf("Input m,k (m>=k>0):");
    scanf("%d,%d", &m, &k);
    if (m >= k && k > 0)
