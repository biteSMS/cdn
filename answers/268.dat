#include <string.h>
typedef struct candidate {
  char name[8];
  int num;

} Vo;
void main() {
  Vo vote[3] = {{"zhang", 0}, {"li", 0}, {"wang", 0}};

  int i, j, k = 0;
  char m[10][8];
  for (i = 0; i < 10; i++) {
    printf("Input vote %d:", i + 1);
    scanf("%s", m[i]);
    getchar();
  }
  for (i = 0; i < 10; i++) {
    for (j = 0; m[i][j] != '\0'; j++) {
      if ('A' <= m[i][j] && m[i][j] <= 'Z')
        m[i][j] = m[i][j] + 32;
    }
  }
  for (i = 0; i < 10; i++) {
    if (strcmp(vote[0].name, m[i]) == 0)
      vote[0].num++;
    else if (strcmp(vote[1].name, m[i]) == 0)
      vote[1].num++;
    else if (strcmp(vote[2].name, m[i]) == 0)
      vote[2].num++;
    else
      k++;
  }
  printf("Election results:\n");
  printf("%8s:%d\n", vote[1].name, vote[1].num);
  printf("%8s:%d\n", vote[0].name, vote[0].num);
  printf("%8s:%d\n", vote[2].name, vote[2].num);
  printf("Wrong election:%d\n", k);
}

