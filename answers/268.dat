    scanf("%s", s[i]);
    if (0 == strcmp(s[i], zhang) || 0 == strcmp(s[i], Zhang))
      z++;
    else if (0 == strcmp(s[i], li) || 0 == strcmp(s[i], Li))
      l++;
    else if (0 == strcmp(s[i], wang) || 0 == strcmp(s[i], Wang))
      w++;
    else
      q++;
