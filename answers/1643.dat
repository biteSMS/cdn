  for (i = 0; i < 10; i++) {
    printf("Input vote %d:", i + 1);
    gets(b[i]);
  }
  for (i = 0; i < 10; i++)
    for (j = 0; j < 10; j++) {
      if ('A' <= b[i][j] && b[i][j] <= 'Z')
        b[i][j] += 32;
    }
  for (i = 0; i < 10; i++) {
    if (!strcmp(b[i], a[0].name))
      a[0].num++;

    else if (!strcmp(b[i], a[1].name))
