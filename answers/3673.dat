#include <stdio.h>
void inverse(char *p);
int main() {
  const int size = 30;
  char str[size];
  printf("Please Enter String1:\n");
  gets(str);
  inverse(str);
  printf("Result is:\n%s\n", str);
  getchar();
  return 0;
}
void inverse(char *p) {
  char *m;
  char t;
  m = p;
  while (*m != '\0')
    m++;
  for (m--; p < m; p++, m--) {
    t = *m;
    *m = *p;
    *p = t;
  }
}

