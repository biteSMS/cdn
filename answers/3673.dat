#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define N 100
void reverse(char *pstr) {
  int lenth = strlen(pstr) - 1, i;
  char temp;
  for (i = 0; i <= lenth; i++, lenth--) {
    temp = pstr[i];
    pstr[i] = pstr[lenth];
    pstr[lenth] = temp;
  }
}
int main() {
  char str[N];
  printf("Please Enter String1:\n");
  gets(str);
  reverse(str);
  printf("Result is:\n%s\n", str);
  return 0;
}

