    printf("y=%d\n", n);
    printf("a=%d,b=%d\n", x, y);
    printf("result=%d\n", r);
  } else {
    n = -n;
    a = n / 1000;
    b = n % 1000 / 100;
    c = n % 100 / 10;
    d = n % 10;
    n = d * 1000 + c * 100 + b * 10 + a;
    x = d * 10 + c;
