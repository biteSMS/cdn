#include <math.h>
#include <stdio.h>
int main() {
  int num, reNum, ge, shi, bai, qian, num1, num2, result;
  printf("Input x:\n");
  scanf("%d", &num);
  if (num < 0)
    num = -num;
  ge = num % 10;
  shi = num % 100 / 10;
  bai = num % 1000 / 100;
  qian = num / 1000;
  reNum = ge * 1000 + shi * 100 + bai * 10 + qian;
  printf("y=%d\n", reNum);
  num1 = ge * 10 + shi;
  num2 = bai * 10 + qian;
  printf("a=%d,b=%d\n", num1, num2);
  result = num1 * num1 + num2 * num2;
  printf("result=%d\n", result);
  return 0;
}

