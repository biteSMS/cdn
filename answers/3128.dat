#include <stdio.h>

#include <math.h>
int main() {
  int x, y, a, b, c, d, m, n;
  printf("Input x:\n");
  scanf("%d", &x);

  if (x < 0)
    x = 0 - x;        //利用abs（）函数取绝对值
  a = x / 1000;       // 千位
  b = (x) / 100 % 10; //百位
  c = (x) % 100 / 10; //十位
  d = x % 10;         //个位
  y = a + b * 10 + c * 100 + d * 1000;
  printf("y=%d\n", y);

  m = c + d * 10;
  n = a + b * 10;
  printf("a=%d,b=%d\n", m, n);
  printf("result=%d\n", m * m + n * n);
  return 0;
}

