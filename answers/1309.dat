#include <math.h>
#include <stdio.h>

float fun(float temp) {
  float result = 0;
  result = 2 * temp * temp * temp - 4 * temp * temp + 3 * temp - 6;
  return result;
}

int main() {
  printf("请输入x1，x2的值：");
  float x1, x2, i, temp = 0;
  scanf("%f,%f", &x1, &x2);
  for (i = 0;; i++) {
    temp = (x1 + x2) / 2;
    if (fun(temp) == 0) {
      printf("方程的根=%6.2f\n", temp);
      return 0;
    } else if (fun(temp) < 0) {
      x1 = temp;

    } else if (fun(temp) > 0) {
      x2 = temp;
    }
  }
  return 0;
}

