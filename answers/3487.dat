#include <stdio.h>
main() {
  int n, i;
  float a[100], h = 0;
  printf("请输入学生的数量:\n");
  scanf("%d", &n);
  printf("请输入学生们的身高:\n");
  for (i = 0; i < n; i++)
    scanf("%f", &a[i]);
  for (i = 0; i < n; i++)
    h = h + a[i];
  h = (float)h / n;
  printf("学生的平均身高为：%6.2f\n", h);
}

