#include <stdio.h>
int a[14] = {0}; //显式地赋0值
int main() {
  int i, n, j = 1;
  printf("The original order of cards is:");
  for (i = 1; i <= 13; i++) {
    n = 0;
    while (n != i) {   //换成do-while也一样
      if (a[j] == 0) { //如果位置空，n就计数
        n++;
        if (n == i) //到了，赋值
          a[j] = i;
      }
      j = j == 13 ? 1 : j + 1; // j一直计数
    }
  }
  for (i = 1; i <= 13; i++)
    printf("%d ", a[i]);
  printf("\n");
  return 0;
}

