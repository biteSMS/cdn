#include <string.h>
#define N 80
void fun(char *w, int m);
void main() {
  char a[N];
  int m;
  printf("请输入字符串:");
  scanf("%s", a);
  printf("请输入移动字符的个数:");
  scanf("%d", &m);
  fun(a, m);
  printf("移动后的字符串为:%s\n", a);
}
void fun(char *w, int m) {
  int i, j, n;
  char c;
  n = strlen(w);
  for (i = 0; i < m; i++) {
    c = w[0];
    for (j = 1; j < n; j++)
      w[j - 1] = w[j];
    w[j - 1] = c;
  }
}


