    for (j = 0; j < 4; j++) {
      scanf("%d", *(p + i) + j);
    }
  }
  for (i = 0; i < 3; i++) {
    for (j = 1; j < 4; j++) {
      if (a[i][max] < a[i][j]) {
        max = j;
      }
      b[i] = a[i][max];
    }
  }
  max = 0;
  for (i = 1; i < 3; i++) {
