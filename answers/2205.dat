#include <stdio.h>
int main() {
  int a[10], n, i, j, count = 0;
  printf("The size of array is:");
  scanf("%d", &n);
  printf("The elements of array are:\n");
  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }
  for (i = 0; i < n; i++) {
    for (j = 0; j < n; j++) {
      if (i == j)
        continue;
      if (a[i] <= a[j])
        count++;
    }
    if (count == 1)
      break;
    else
      count = 0;
  }
  printf("The second largest number is:%d\n", a[i]);
  return 0;
}

