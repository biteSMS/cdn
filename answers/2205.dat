#include <stdio.h>
#include <stdlib.h>
int Find(int *p, int n);
int main() {
  int *p = NULL, n, i, m;
  printf("The size of array is:");
  scanf("%d", &n);
  p = (int *)malloc(n * sizeof(int));
  if (p == NULL) {
    printf("No Enough memory!\n");
    exit(0);
  }
  printf("The elements of array are:\n");
  for (i = 0; i < n; i++) {
    scanf("%d", &p[i]);
  }
  m = Find(p, n);
  printf("The second largest number is:%d\n", m);
  return 0;
}
int Find(int *p, int n) {
  int max, i, a;
  max = p[0];
  a = 0;
  for (i = 1; i < n; i++) {
    if (max < p[i]) {
      max = p[i];
      a = i;
    }
  }
  p[a] = 0;
  max = p[0];
  for (i = 1; i < n; i++) {
    if (max < p[i]) {
      max = p[i];
    }
  }
  return max;
}

