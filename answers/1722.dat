#include <math.h>
#include <stdio.h>
#define LIMIT 1e-1
int main() {
  float a, b, c;

  printf("Input a,b,c:");
  scanf("%f,%f,%f", &a, &b, &c);
  if ((a + b) > c && (b + c) > a && (a + c) > b) {
    if (fabs(a - b) <= LIMIT || fabs(b - c) <= LIMIT || fabs(c - a) <= LIMIT) {
      if (fabs(a * a + b * b - c * c) <= LIMIT ||
          fabs(a * a + c * c - b * b) <= LIMIT ||
          fabs(c * c + b * b - a * a) <= LIMIT) {
        printf("等腰直角三角形");
      } else if (a == b && b == c) {
        printf("等边三角形");
      } else {
        printf("等腰三角形");
      }
    } else if (fabs(a * a + b * b - c * c) <= LIMIT ||
               fabs(a * a + c * c - b * b) <= LIMIT ||
               fabs(c * c + b * b - a * a) <= LIMIT) {
      printf("直角三角形");
    } else {
      printf("一般三角形");
    }

  } else {
    printf("不是三角形");
  }
  return 0;
}


