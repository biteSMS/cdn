#define N 40
Max(int a[N]);
Min(int a[N]);
main() {
  int i, n, a[N], sum = 0, max, min;
  printf("Please input ten integers:\n");
  for (i = 0; i < 10; i++) {
    scanf("%d", &a[i]);
  }
  max = Max(a);
  min = Min(a);
  sum = sum + max + min;
  printf("The sum of the minimum value and the maximum value is %d\n", sum);
}
Max(int a[N]) {
  int max, i;
  max = a[0];
  for (i = 1; i < 10; i++) {
    if (a[i] > a[i - 1])
      max = a[i];
  }
  return max;
}
Min(int a[N]) {
  int min, i;
  min = a[0];
  for (i = 1; i < 10; i++) {
    if (a[i] < a[i - 1])
      min = a[i];
  }
  return min;
}

