  printf("Input n:\n");
  scanf("%d", &n);
  for (i = 1; i <= n; i++)
    printf("%4d", i);
  printf("\n");
  for (i = 1; i <= n; i++)
    printf("%4c", '-');
  printf("\n");
  for (i = 1; i <= n; i++) {
