#include <stdio.h>

int main() {
  int n, i, j;

  printf("Input n:\n");
  scanf("%d", &n);

  for (i = 1; i <= n; i++) {
    printf("%4d", i);
  }

  printf("\n");

  for (i = 1; i <= n; i++) {
    printf("   -");
  }

  printf("\n");

  for (i = 1; i <= n; i++) {
    for (j = 1; j <= n; j++) {
      if (j < i)
        printf("    ");
      else
        printf("%4d", i * j);
    }
    printf("\n");
  }
  return 0;
}

