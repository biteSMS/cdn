#include <stdio.h>
void Input(int a[], int n);
int Findmax(int a[], int n, int *pos);
int main() {
  int n, a[30];
  int maxNum; //存放数组最大值
  int maxPos; //存放最大值下标
  printf("Input n:");
  scanf("%d", &n);
  Input(a, n);
  maxNum = Findmax(a, n, &maxPos);
  printf("The maximum subscript is:%d,The maximum value is:%d\n", maxPos,
         maxNum);
  return 0;
}
//读入数组元素的值
void Input(int a[], int n) {
  int i;
  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }
}
//计算数组最大值及最大值下标
int Findmax(int a[], int n, int *pos) {
  int i, maxNum;
  *pos = 0;
  maxNum = a[0];
  for (i = 0; i < n; i++) {
    if (a[i] >= maxNum) {
      maxNum = a[i];
      *pos = i;
    }
  }
  return maxNum;
}


