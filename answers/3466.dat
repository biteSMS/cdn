#include <stdio.h>

int main() {
  int i, n;
  float h, h1, h2;
  h = 0;
  printf("请输入下落高度:\n");
  scanf("%f", &h1);
  h2 = h1;
  printf("求下落n次路程:\n");
  scanf("%d", &i);
  for (n = 0; i != n; n++) {
    h2 = h2 / 2;
    h1 = h1 + 2 * h;
    h = h2;
  }
  printf("总长度是：%f\n", h1);
  return 0;
}


