#include <stdio.h>
#include <stdlib.h>

int main() {
  short n;
  int a[16] = {0}, i = 0;
  do {
    printf("n=");
    scanf("%hd", &n);
  } while (n <= 0);

  do {
    a[i] = n % 2;
    n = n / 2;
    i++;
  } while (n != 0);
  printf("the binary number is ");
  for (i = 15; i >= 0; i--) {
    printf("%d", a[i]);
  }
  return 0;
}

