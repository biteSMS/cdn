#include <stdio.h>
int main(void) {
  int a[2][3];
  int b[3][2];
  int i, j;
  printf("Array a:\n");
  for (i = 0; i < 2; i++) {
    for (j = 0; j < 3; j++) {
      scanf("%d", &a[i][j]);
    }
  }
  for (i = 0; i < 3; i++) {
    for (j = 0; j < 2; j++) {
      b[i][j] = a[1 - j][i];
    }
  }
  printf("Array b:\n");
  for (i = 0; i < 3; i++) {
    for (j = 0; j < 2; j++) {
      printf("%4d", b[i][j]);
    }
    printf("\n");
  }
  return 0;
}

