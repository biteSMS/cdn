#include <stdio.h>
#define N 2
#define M 3
int main() {
  int a[N][M], b[M][N];
  int i, j, m = 1;
  printf("Array a:\n");
  for (i = 0; i < N; i++)
    for (j = 0; j < M; j++)
      scanf("%d", &a[i][j]);
  for (j = 0; j < N; j++) {
    for (i = 0; i < M; i++) {
      b[i][j] = a[m][i];
    }
    m--;
  }
  printf("Array b:\n");
  for (i = 0; i < M; i++) {
    for (j = 0; j < N; j++) {
      printf("%4d", b[i][j]);
    }
    printf("\n");
  }
}


