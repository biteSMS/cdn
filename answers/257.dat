#include <stdio.h>

main()

{

  char a[100];

  int i, count = 0, flag = 1;
  printf("Input a string:");

  gets(a);

  for (i = 0; a[i]; i++)

  {

    if ((a[i] >= 'a' && a[i] <= 'z') || (a[i] >= 'A' && a[i] <= 'Z'))

    {

      flag = 0;

      continue;
    }

    if (!flag)

    {

      count++;

      flag = 1;
    }
  }

  i--;

  if ((a[i] >= 'a' && a[i] <= 'z') || (a[i] >= 'A' && a[i] <= 'Z'))

    count++;

  printf("Numbers of words = %d\n", count);
}


