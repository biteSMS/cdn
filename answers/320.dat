#include <stdio.h>
int main() {
  int i, j, n;
  printf("Input n:\n");
  scanf("%d", &n);
  for (i = 1; i <= n; i++) {
    for (j = 1; j <= i; j++)
      printf("%4d", i * j);
    printf("\n");
  }

  return 0;
}

