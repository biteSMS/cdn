//编程验证哥德巴赫猜想：任意一个充分大的偶数，可以用两个素数之和表示。如：
// 4 = 2 + 2    6 = 3 + 3。
//**输入格式要求："%d" 提示信息："Input a number:\n" 输入奇数时报错： "Input
//error!\n"
//**输出格式要求：输入偶数时显示"%d=%d+%d\n"
//程序的运行的输入输出样例1：
//屏幕先显示提示信息：
// Input a number :
//然后用户键盘输入：
// 9
//最后屏幕输出：
// Input error!
//程序的运行的输入输出样例2：
//屏幕先显示提示信息：
// Input a number :
//然后用户键盘输入：
// 100
//最后屏幕输出：
// 100 = 3 + 97

#include <stdio.h>
#include <stdlib.h>

int susu(int x) {
  int susu = 1, i = 0;
  for (i = 2; i < x && susu; i++) {
    if (x % i == 0)
      susu = 0;
  }

  return susu;
}

int main() {
  printf("Input a number:\n");
  int x = 0;
  scanf("%d", &x);
  if (x % 2) {
    printf("Input error!\n");
    return 0;
  }

  int i = 0;
  for (i = 2; i < x / 2 + 1; i++) {
    if (susu(i) && susu(x - i)) {
      printf("%d=%d+%d\n", x, i, x - i);
      return 0;
    }
  }
  return 0;
}


