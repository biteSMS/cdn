  char ch;
  int i = 0, count = 0;
  printf("Input your password:\n");

  do {
    scanf(" %c", &ch);
    if (ch <= '9' && ch > '0') {
      count++;
      printf("%c, you have enter %d-bits number\n", ch, count);
      i++;

    } else {
      printf("error\n");
    }

  } while (i < 6);
}

