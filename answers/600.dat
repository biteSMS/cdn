int main() {
  int a[3][3];
  int i, j, k = 0, max;

  for (i = 0; i < 3; i++) {
    for (j = 0; j < 3; j++) {
      scanf("%d", &a[i][j]);
    }
  }
  max = a[0][0];
  for (i = 1; i < 3; i++) {
    if (max < a[i][i]) {
      max = a[i][i];
