#include <stdio.h>
#include <stdlib.h>

int main() {
  int a[3][3] = {};
  int i, j, max, row;

  for (i = 0; i < 3; i++) {
    for (j = 0; j < 3; j++) {
      scanf("%d", *(a + i) + j);
    }
  }
  max = a[0][0];
  row = 0;
  for (i = 1; i < 3; i++) {
    if (a[i][i] > max) {
      max = a[i][i];
      row = i;
    }
  }
  for (i = 0; i < 2; i++) {
    for (j = 2 - i; j < 3; j++) {
      if (a[i][j] > max) {
        max = a[i][j];
        row = i;
      }
    }
  }

  printf("max=%d ,row=%d", max, row);
  return 0;
}

