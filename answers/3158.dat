#include <stdio.h>
#include <stdlib.h>

int islove(int m, int n) {
  int flag = 0;
  int i;
  int sum1 = 0, sum2 = 0;

  for (i = 1; i < m; i++) {
    if (m % i == 0) {
      sum1 += i;
    }
  }
  for (i = 1; i < n; i++) {
    if (n % i == 0) {
      sum2 += i;
    }
  }
  if (m == sum2 && n == sum1)
    flag = 1;

  return flag;
}
int main() {
  int m, n;
  printf("Input m, n:\n");
  scanf("%d,%d", &m, &n);

  if (islove(m, n)) {
    printf("Yes!\n");
  }
  if (!islove(m, n)) {
    printf("No!\n");
  }

  return 0;
}

