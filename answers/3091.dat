int main() {

  int i, n, k, j;

  printf("Input n:");

  scanf("%d", &n);

  int a[n];

  printf("Input %d numbers:", n);

  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }

  for (i = 0; i < n - 1; i++) {
    for (j = 0; j < n; j++) {
      if (a[j] > a[j + 1]) {
        k = a[j];
        a[j] = a[j + 1];
        a[j + 1] = k;
      }
    }
  }

  printf("Sorting results:");

  for (i = 0; i < n; i++) {
    printf("%4d", a[i]);
  }

  return 0;
}


