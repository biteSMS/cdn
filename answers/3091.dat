#include <stdio.h>
#include <stdlib.h>

void sort(int *a, int n) {
  int i, j, temp;

  for (i = 0; i < n - 1; i++) {
    for (j = i + 1; j < n; j++) {
      if (a[j] < a[i]) {
        temp = a[j];
        a[j] = a[i];
        a[i] = temp;
      }
    }
  }
}
int main() {
  int n, a[80] = {}, i;
  printf("Input n:");
  scanf("%d", &n);

  printf("Input %d numbers:", n);
  for (i = 0; i < n; i++) {
    scanf("%d", a + i);
  }

  sort(a, n);
  printf("Sorting results:");
  for (i = 0; i < n; i++) {
    printf("%4d", a[i]);
  }

  return 0;
}

