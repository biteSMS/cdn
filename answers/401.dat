#include <stdio.h>
void main() {
  int n, p = -1;
  double q = 1.0, s = 0.0;
  for (n = 1; fabs(q) >= 1e-4; n = n + 2) {
    p = -p;
    q = (1.0 / n) * p; // 1.0/n
    s += q;
  }
  printf("pi=%10.6lf\n", s * 4);
}

