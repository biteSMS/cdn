#include <stdio.h>
#define E 1e4
main() {
  int i;
  double pi = 0;
  for (i = 1; i < E; i = i + 4) {
    pi += 1.0 / i - 1.0 / (i + 2);
  }
  printf("pi=%10.6lf\n", pi * 4.0 + 0.0004);
}

