#include <math.h>
#include <stdio.h>
main() {
  double pi, sum = 0, term, sign = 1.0;
  int count = 0, n = 1;
  do {
    term = sign / n;
    sum = sum + term;
    count++;
    sign = -sign;
    n = n + 2;
  } while (fabs(term) >= 1e-4);
  pi = sum * 4;
  printf("pi=%10.6lf\n", pi);
}

