#include <stdio.h>

int main() {
  int n, i;
  float m = 100, h = 50;
  printf("input:\n");
  scanf("%d", &n);
  printf("%d times:\n", n);
  for (i = 1; i < n; i++) {
    m += 2 * h;
    h /= 2;
  }
  printf("%.3f\n", m);
  printf("%.3f\n", h);

  return 0;
}

