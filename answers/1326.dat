#include <stdio.h>
#include <stdlib.h>
#define N 80
int main() {
  int number[N], i, j, n, count = 1;
  printf("请输入人数：");
  scanf("%d", &n);
  for (i = 0; i < n; i++) {
    number[i] = i + 1;
  }
  j = 0;
  while (count < n) {
    for (i = 0; i < n; i++) {
      if (number[i] != 0)
        j++;
      if (j == 3) {
        number[i] = 0;
        count++;
        j = 0;
      }
    }
  }
  for (i = 0; i < n; i++) {
    if (number[i] != 0)
      printf("%d个人中最后留下的是第%d号。\n", n, number[i]);
  }
  return 0;
}


