#include <stdio.h>
int main() {
  short int a1, b1, a2, b2;
  scanf("a = %3hd%4hd,b = %3hd%4hd", &a1, &a2, &b1, &b2);
  a1 += b1;
  a2 += b2;
  if (a2 > 9999) {
    a1++;
    a2 -= 10000;
  }
  printf("a + b = %hd%04hd\n", a1, a2);
  return 0;
}

