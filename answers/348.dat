#include <math.h>
#include <stdio.h>
int main() {
  int year;
  double rate, deposit, capital;
  printf("Please enter year,capital:");
  scanf("%d,%lf", &year, &capital);
  switch (year) {
  case 1:
    rate = 0.0225;
    deposit = capital * pow((1 + rate), year);
    printf("rate = %lf, deposit = %lf", rate, deposit);
    break;
  case 2:
    rate = 0.0243;
    deposit = capital * pow((1 + rate), year);
    printf("rate = %lf, deposit = %lf", rate, deposit);
    break;
  case 3:
    rate = 0.0270;
    deposit = capital * pow((1 + rate), year);
    printf("rate = %lf, deposit = %lf", rate, deposit);
    break;
  case 5:
    rate = 0.0288;
    deposit = capital * pow((1 + rate), year);
    printf("rate = %lf, deposit = %lf", rate, deposit);
    break;
  case 8:
    rate = 0.03;
    deposit = capital * pow((1 + rate), year);
    printf("rate = %lf, deposit = %lf", rate, deposit);
    break;
  default:
    printf("Error rate!\n");
  }
  return 0;
}

