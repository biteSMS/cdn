#include <stdio.h>
#include <string.h>
int IsCsc(int csc[]) {
  if (csc[0] == csc[1] - 1 && csc[0] == csc[2] - 2)
    return 1;
  else
    return 0;
}
int main() {
  int count = 0;
  int n, i, j, k;
  int card[10005] = {0}, csc[4];
  memset(csc, -1, sizeof(csc));
  printf("请输入数据范围(在1~10000之间):");
  scanf("%d", &n);
  printf("请输入数据:");
  for (i = 0; i < n; i++)
    scanf("%d", &card[i]);
  for (i = 0; i < n; i++) {
    for (j = i; j < n; j++)
      if (card[i] > card[j]) {
        int temp = card[i];
        card[i] = card[j];
        card[j] = temp;
      }
  }
  for (i = 0; i < n; i++) {
    if (card[i] == 0)
      continue;
    k = 0;
    for (j = i; j < n; j++) {
      if (k == 3)
        break;
      if (j == i)
        csc[k++] = card[j];
      else if (card[j] == card[j - 1] || card[j] == 0)
        continue;
      else
        csc[k++] = card[j];
    }
    k = 0;
    if (IsCsc(csc)) {
      for (j = 0; j < n; j++) {
        if (card[j] == csc[k]) {
          card[j] = 0;
          k++;
        }
      }
      count++;
    }
    memset(csc, -1, sizeof(csc));
  }
  printf("%d", count);
}

