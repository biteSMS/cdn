#include <stdio.h>
int shuru(int a[], int n);
int panduan(int a[], int n);
main() {
  int a[10000], i, j, n, count = 0;
  printf("请输入数据范围(在1~10000之间):");
  scanf("%d", &n);
  shuru(a, n);
  for (i = 0; i < n; i++) {
    if (a[i] != 0) {
      j = panduan(a, a[i]);
      if (j == 1)
        count++;
    }
  }
  printf("%d", count);
}

int shuru(int a[], int n) {
  int i, j;
  printf("请输入数据:");
  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }
  return 0;
}

int panduan(int a[], int n) {
  int x, y, count = -5, sum = -5, i, j;
  x = n + 1;
  y = n - 1;
  for (i = 0; i < n; i++) {
    if (a[i] == x) {
      count = i;
      continue;
    }
    if (a[i] == y) {
      sum = i;
      continue;
    }
    if (sum != -5 && count != -5)
      break;
  }
  if (sum != -5 && count != -5) {
    a[count] = 0;
    a[sum] = 0;
    return 1;
  } else
    return 0;
}


