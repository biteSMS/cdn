#include <stdio.h>
#include <stdlib.h>

int main() {
  int n;
  char month[13][20] = {"Illegal month", "January",   "February", "March",
                        "April",         "May",       "June",     "July",
                        "August",        "September", "October",  "November",
                        "December"};

  printf("Input month number:\n");
  scanf("%d", &n);

  if (0 < n && n < 13)
    printf("month %d is %s\n", n, month[n]);
  if (n < 1 || n > 12)
    printf("%s\n", month[0]);

  return 0;
}

