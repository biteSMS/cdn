#include <stdio.h>
#define N 10
int main() {
  char month[12][N] = {"January",   "February", "March",    "April",
                       "May",       "June",     "July",     "August",
                       "September", "October",  "November", "December"};
  char *pstr[12];
  int i, n;
  for (i = 0; i < 12; i++) {
    pstr[i] = month[i];
  }
  printf("Input month number:\n");
  scanf("%d", &n);
  if (n >= 1 && n <= 12)
    printf("month %d is %s\n", n, pstr[n - 1]);
  else
    printf("Illegal month");
  return 0;
}

