int main() {
  char c, ch;
  scanf("%c", &c);
  if (c < 65)
    printf("Input error!");
  else if (c > 91 && c < 97)
    printf("Input error!");
  else if (c > 114)
    printf("Input error!");
  else {
    if (c > 96)
      ch = c - 32;
    else
      ch = c + 32;
    printf("%c,%d", ch, ch);
  }
  return 0;
}

