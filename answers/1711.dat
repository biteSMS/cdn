#include <string.h>

int main() {
  printf("Please input a  string:");
  char ch[105];
  gets(ch);
  int i, a1 = 0, a2 = 0, a3 = 0, a4 = 0;

  for (i = 0; i < strlen(ch); i++) {
    if (ch[i] >= 'a' && ch[i] <= 'z' || ch[i] >= 'A' && ch[i] <= 'Z')
      a1++;
    else if (ch[i] >= '0' && ch[i] <= '9')
      a2++;
    else if (ch[i] == ' ')
      a3++;
    else
      a4++;
  }
  printf("English character:  %d\n", a1);
  printf("digit character:  %d\n", a2);
  printf("space:  %d\n", a3);
  printf("other character:  %d\n", a4);
}

