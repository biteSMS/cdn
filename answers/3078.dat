#include <stdio.h>
int Monkey(int n);
main() {
  int n;
  printf("Input days:\n");
  scanf("%d", &n);
  printf("x=%d\n", Monkey(n));
}
int Monkey(int n) {
  int sum;
  if (n == 1) {
    sum = 1;
  } else {
    sum = (Monkey(n - 1) + 1) * 2;
  }
  return sum;
}

