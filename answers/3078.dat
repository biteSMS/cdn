#include <stdio.h>
#include <stdlib.h>
int main() {
  int i = 1, m = 1, n;
  printf("Input days:\n");
  scanf("%d", &n);
  while (i <= n - 1) {
    m = (m + 1) * 2;
    i++;
  }
  printf("x=%d\n", m);
}

