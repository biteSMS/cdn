#include <stdio.h>
int main() {
  int n, x, y;
  printf("Input days:\n");
  scanf("%d", &n);
  y = 1;
  while (n > 1) {
    x = (y + 1) * 2; /* 第 1 天的桃子数是第 2 天桃子数加 1 后的 2 倍 */
    y = x;
    n--;
  }
  printf("x=%d\n", x);
  return 0;
}

