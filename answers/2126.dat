#include <stdio.h>
int CountWords(char str[]);
int main() {
  char str[80];
  printf("Input a string:\n");
  gets(str);
  printf("Number of words=%d\n", CountWords(str));
  return 0;
}
int CountWords(char str[]) {
  int i, n = 0;
  for (i = 1; str[i] != 0; i++) {
    if (str[i - 1] != ' ' && str[i] == ' ') {
      n++;
    }
  }
  return n + 1;
}

