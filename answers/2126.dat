  return 0;
}
int CountWords(char str[]) {
  int count = 0, i;
  for (i = 0; str[i] != '\0'; i++) {
    if ((str[i] != ' ' && str[i + 1] == ' ') ||
        (str[i] != ' ' && str[i + 1] == '\0'))
      count++;
  }
  return count;
}


