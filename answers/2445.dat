#include <stdio.h>
#include <string.h>
void Inverse(char str[]);
int main() {
  const int size = 80;
  char str[size];
  printf("请输入一个字符串：");
  gets(str);
  Inverse(str);
  printf("该字符串逆反后为%s！\n", str);
  return 0;
}
void Inverse(char str[]) {
  int i = strlen(str);
  char ch;
  for (i = 0; i < strlen(str) / 2; i++) {
    ch = str[i];
    str[i] = str[strlen(str) - 1 - i];
    str[strlen(str) - 1 - i] = ch;
  }
}

