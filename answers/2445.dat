#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  char a[80], b[80];
  char *p = NULL, *m = b;

  printf("请输入一个字符串：");
  scanf("%s", a);

  p = a + strlen(a) - 1;
  for (; p >= a; p--, m++) {
    *m = *p;
  }
  *m = '\0';

  printf("该字符串逆反后为%s！\n", b);
  return 0;
}

