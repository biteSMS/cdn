#include <stdio.h>
#include <string.h>
#define N 80
void Reverse(char str[]);
int main() {
  char a[N];
  printf("请输入一个字符串：");
  gets(a);
  Reverse(a);
  printf("该字符串逆反后为%s！\n", a);
  return 0;
}
void Reverse(char str[]) {
  char pstr[N];
  int i, n;
  strcpy(pstr, str);
  n = strlen(pstr);
  for (i = 0; i < n; i++) {
    str[i] = pstr[n - 1 - i];
  }
  str[i] = '\0';
}

