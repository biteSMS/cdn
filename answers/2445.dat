#include <math.h>
#include <stdio.h>

void main() {

  char a[100];
  char *p1, *p2, *p3;
  int i;
  char ch;
  printf("请输入一个字符串：");
  gets(a);
  p1 = a;
  p2 = a;
  p3 = a;

  while (*p2 != '\0') {
    p2++;
  }
  p2 = p2 - 1;
  while (p1 < p2) {
    ch = *p2;
    *p2 = *p1;
    *p1 = ch;
    p1++;
    p2--;
  }
  printf("该字符串逆反后为%s！\n", p3);
}

