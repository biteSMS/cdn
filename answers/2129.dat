#include <math.h>
#include <stdio.h>
main() {
  float sum, term, sign;
  int n;
  n = 1;
  sum = 0;
  term = 1;
  sign = 1;
  while (fabs(term) >= 1e-6) {
    sum = sum + term;
    sign = -sign;
    n = n + 2;
    term = sign / n;
  }
  printf("sum=%0.3f\n", sum);
}

