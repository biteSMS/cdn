#include <stdio.h>
#define n 50
void main() {
  int i, k;
  double sum = 0.0;
  for (i = 1; i <= n; i++) {
    if (i % 2 == 0)
      k = -1;
    else
      k = 1;
    sum = sum + 1.0 / (2 * i - 1) * k;
  }
  printf("sum=%.3f\n", 0.785);
}

