#include <stdio.h>
main() {
  int i = 1, flag = 1;
  float sum = 0, next = 1;
  while (next >= 1e-6) {
    sum = sum + (next * flag);
    flag = -flag;
    i = i + 2;
    next = (float)1 / i;
  }
  printf("sum=%.3f\n", sum);
}

