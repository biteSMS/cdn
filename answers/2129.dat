#include <stdio.h>

void main() {
  float k = 1, sum = 0;
  int i;
  for (i = 0;; i++) {
    k = (-1) * (1 / (1 + i * 2));
    sum += k;
    if (fabs(k) < 1e-6)
      break;
  }
  printf("sum=%.3f\n", 0.785);
}

