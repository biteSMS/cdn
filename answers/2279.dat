#include <math.h>
#include <stdio.h>
#define N 5
/*输入3个数x,y,z，按大小顺序排序后输出。
要求：利用指针方法实现两数互换*/
void swap(int *p1, int *p2) {
  int temp = 0;
  temp = *p1;
  *p1 = *p2;
  *p2 = temp;
}
void main() {
  int x, y, z;
  printf("please input 3 number x,y,z");
  scanf("%d,%d,%d", &x, &y, &z);
  if (x < y) {
    if (y >= z) // y最大
    {
      // xzy
      if (x <= z) {
        swap(&y, &z);
      }
      // zxy
      else {
        swap(&x, &y);
      }
    } else // z最大
    {
      // xyz
    }
  } else // x>=y
  {
    if (x >= z) // x最大
    {
      // yzx
      if (z >= y) {
        swap(&x, &y);
        swap(&y, &z);
      }
      // zyx
      else {
        swap(&x, &z);
      }
    } else // z最大
    {
      // yxz
      swap(&x, &y);
    }
  }
  printf("the sorted numbers are:%d,%d,%d\n", x, y, z);
}

