#include <stdio.h>
#define N 40
int main() {
  int a[N];
  long int b[N];
  int n;
  int i = -1;
  int max;
  int pos;
  do {
    i++;
    printf("Input student¡¯s ID and score:");
    scanf("%ld%d", &b[i], &a[i]);
  } while (b[i] >= 0 && a[i] >= 0);
  n = i - 1;
  max = a[0];
  for (i = 0; i < n + 1; i++) {
    if (a[i] >= max) {
      pos = i;
      max = a[i];
    }
  }
  printf("Total students are %d\n", n + 1);
  printf("The highest is:%ld, %d\n", b[pos], a[pos]);
  return 0;
}

