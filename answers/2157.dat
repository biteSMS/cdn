#include <stdio.h>
int main() {
  float a, b, sum;
  char op;
  printf("Type in an expression: ");
  scanf("%f %c %f", &a, &op, &b);
  if (op == '+') {
    sum = a + b;
    printf("=%.2f\n", sum);
  } else if (op == '-') {
    printf("=%.2f\n", a - b);
  } else if (op == '*') {
    printf("=%.2f\n", a * b);
  } else if (op == '/') {
    printf("=%.2f\n", a / b);
  } else
    printf("Unknown operator\n");
}

