#include <stdio.h>
void main() {
  double data1, data2;
  char op;
  printf("Type in an expression: ");
  scanf("%lf%c%lf", &data1, &op, &data2);
  switch (op) {
  case '+':
    printf("=%.2f\n", data1 + data2);
    break;
  case '-':
    printf("=%.2f\n", data1 - data2);
    break;
  case '*':
    printf("=%.2f\n", data1 * data2);
    break;
  case '/': {
    if (data2 != 0)
      printf("=%.2f\n", data1 / data2);
    else
      printf("Division by zero\n");
  } break;
  default:
    printf("Unknown operator\n");
  }
}

