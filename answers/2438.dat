#include <stdio.h>
#include <stdlib.h>

int main() {
  char str[4];
  int i, flag = 1;

  printf("请输入四个数字字符：");
  for (i = 0; i < 4; i++) {
    scanf("%c", &str[i]);
  }

  for (i = 0; i < 4; i++) {
    if (str[i] < 48 || str[i] > 57) {
      flag = 0;
    }
  }
  if (0 == flag) {
    printf("有非数字字符！");
  } else {
    printf("你输入的数值+1后为%d\n", atoi(str) + 1);
  }
  return 0;
}

