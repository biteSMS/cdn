#include <stdio.h>
#include <stdlib.h>

int main() {
  const int n = 5;
  char s[n];
  int i, flag = 0, numble;
  printf("请输入四个数字字符：");
  gets(s);
  for (i = 0; s[i] != '\0'; i++) {
    if (s[i] <= '0' || s[i] >= '9') {
      flag = 1;
    }
  }

  if (0 == flag) {
    numble = atoi(s);
    printf("你输入的数值+1后为%d\n", numble + 1);
  } else {
    printf("有非数字字符！");
  }

  return 0;
}

