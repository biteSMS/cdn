  char s[5];
  int a = 0, t, i, flag = 0;
  printf("请输入四个数字字符：");
  gets(s);
  for (i = 0; s[i] != '\0' && flag == 0; i++) {
    if (s[i] <= '9' && s[i] >= '0') {
      t = s[i] - '0';
      a = a * 10 + t;
    } else {
      printf("有非数字字符！");
      flag = 1;
    }
  }
  if (!flag)
    printf("你输入的数值+1后为%d\n", a + 1);
}

