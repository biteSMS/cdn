      str[3] - '0' >= 0 && str[3] - '0' <= 9) {
    num = 1000 * (str[0] - '0') + 100 * (str[1] - '0') + 10 * (str[2] - '0') +
          (str[3] - '0') + 1;
    printf("你输入的数值+1后为%d\n", num);
  } else {
    printf("有非数字字符！");
  }
}

