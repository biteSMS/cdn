#include <stdio.h>
void Instead(char *chars, char *instead);
int main() {
  char chars[] = {'a', ' ', 'b', ' ', 'c', ' ', ' ', 'd'};
  char instead[20];
  int i;
  Instead(chars, instead);
  printf("替换后数组为：");
  for (i = 0; i < 8; i++) {
    printf("%c ", chars[i]);
  }
  return 0;
}
void Instead(char *chars, char *instead) {
  int i;
  for (i = 0; i < 8; i++) {
    if (*(chars + i) == ' ') {
      *(chars + i) = '_';
    }
  }
}

