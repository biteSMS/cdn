int main() {
  char chars[] = {'a', ' ', 'b', ' ', 'c', ' ', ' ', 'd'};
  int i;
  for (i = 0; chars[i] != '\0'; i++) {
    if (chars[i] == ' ') {
      chars[i] = '_';
    }
  }
  printf("替换后数组为：");
  for (i = 0; i < 7; i++) {
    printf(""
           "%c ",
           chars[i]);
  }
  printf(""
         "%c",
         chars[7]);
}

