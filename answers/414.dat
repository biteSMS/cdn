            printf("    PEAR        %d%d%d%d\n", P, E, A, R);
            printf("     ARA       -  %d%d%d\n", A, R, A);
            printf("-----------   ----------------\n");
            printf("     PEA           %d%d%d\n", P, E, A);
          }
        }
      }
    }
  }

  return 0;
}


