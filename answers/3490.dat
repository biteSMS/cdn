void order(int *p, int n) {
  int j = 0, i = 0, t;
  for (i = 0; i < n; i++) {
    for (j = i + 1; j < n; j++) {
      if (p[i] > p[j]) {
        t = p[i];
        p[i] = p[j];
        p[j] = t;
      }
