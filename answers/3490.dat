#include <math.h>
#include <stdio.h>
void order(int *p, int n) {
  int i, j, temp;
  for (i = 1; i < n; i++) // size-1
  {
    for (j = 0; j <= n - 1 - i; j++) {
      if (p[j] > p[j + 1]) {
        temp = p[j];
        p[j] = p[j + 1];
        p[j + 1] = temp;
      }
    }
  }
}
int main() {
  int i, n, num[21];
  printf("请输入数组元素的个数:\n");
  scanf("%d", &n);
  printf("请输入各个元素:\n");
  for (i = 0; i < n; i++) {
    scanf("%d", &num[i]);
  }
  order(num, n);
  printf("排序后的数组:\n");
  for (i = 0; i < n; i++) {
    printf("%5d", num[i]);
  }
  return 0;
}

