#include <stdio.h>

void main() {
  int i;
  float total = 100, height = 50;
  for (i = 2; i <= 10; i++) {
    total = total + height * 2;
    height *= 0.5;
  }
  printf("第10次落地时共经过%f米。\n"
         "第10次反弹%f米。\n",
         total, height);
}

