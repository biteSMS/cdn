#include <stdio.h>
int long fac(int n);
int main() {
  int n;
  printf("Input an integer:\n");
  scanf("%d", &n);
  if (n < 0)
    printf("Input Error!\n");
  else
    printf("%d! = %ld\n", n, fac(n));
  return 0;
}
int long fac(int n) {
  if (n == 0 || n == 1)
    return 1;
  else
    return n * fac(n - 1);
}

