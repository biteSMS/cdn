#include <stdio.h>
long fac(int n);
int main() {
  int n;
  long int x;
  printf("Input an integer:\n");
  scanf("%d", &n);
  if (n < 0)
    printf("Input Error!\n");
  else {
    x = fac(n);
    printf("%d! = %ld\n", n, x);
  }
  return 0;
}
long fac(int n) {
  int i, x;
  for (i = 1, x = 1; i <= n; i++) {
    x = x * i;
  }
  return x;
}

