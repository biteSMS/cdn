#include <stdio.h>
#define N 10
void fun(int *p) {
  int i, t;
  int max = 0;
  int min = 0;
  for (i = 0; i < N; i++) {
    if (*(p + i) < p[max])
      max = i;
    if (*(p + i) > p[min])
      min = i;
  }
  t = p[max];
  *(p + max) = *(p + min);
  p[min] = t;
}
main() {
  int i;
  int aa[N] = {44, 55, 62, 42, 35, 52, 78, 95, 66, 73};
  printf("\n***original list***\n");
  for (i = 0; i < N; i++)
    printf("%4d", *(aa + i));
  fun(aa);
  printf("\n***new list***\n");
  for (i = 0; i < N; i++) {
    printf("%4d", *(aa + i));
  }
}

