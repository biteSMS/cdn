#include <stdlib.h>
int main() {
  char s[100];
  int i;
  printf("请输入字符：\n");
  gets(s);
  printf("密码是：%s\n", s);
  for (i = 0; s[i] != '\0'; i++) {
    if ((s[i] >= 'A' && s[i] <= 'Z'))
      s[i] = 26 - (s[i] - 64) + 1 + 64;
    if ((s[i] >= 'a' && s[i] <= 'z'))
      s[i] = 26 - (s[i] - 96) + 1 + 96;
