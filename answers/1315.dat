#include <stdio.h>
int main() {
  char s[100];
  int i, t;
  printf("请输入字符：\n");
  gets(s);
  printf("密码是：%s\n", s);
  for (i = 0; s[i] != 0; i++) {
    if (s[i] <= 'Z' && s[i] >= 'A') {
      t = s[i] - 'A';
      s[i] = 'A' + 26 - t - 1;
    } else if (s[i] <= 'z' && s[i] >= 'a') {
      t = s[i] - 'a';
      s[i] = 'a' + 26 - t - 1;
    }
  }
  printf("原文是：%s", s);
}

