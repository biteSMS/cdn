#include <stdio.h>
#define N 15
int main() {
  char a[N], b[N];
  int i;
  printf("请输入字符：\n");

  gets(a);
  printf("密码是：");
  puts(a);
  for (i = 0; a[i]; i++) {
    if (a[i] >= 'A' && a[i] <= 'Z') {
      b[i] = 'A' + 'Z' - a[i];
    } else if (a[i] >= 'a' && a[i] <= 'z') {
      b[i] = 'a' + 'z' - a[i];
    } else
      b[i] = a[i];
  }
  b[i] = '\0';
  printf("原文是：");
  puts(b);
  return 0;
}


