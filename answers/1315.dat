#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main() {
  char a[100], b[100];
  int len, i;
  printf("请输入字符：\n");
  gets(a);
  strcpy(b, a);
  len = strlen(a);
  for (i = 0; i < len; i++) {
    if (a[i] >= 'a' && a[i] <= 'z') {
      a[i] = 'a' + 'z' - a[i];
    }
    if (a[i] >= 'A' && a[i] <= 'Z') {
      a[i] = 'A' + 'Z' - a[i];
    }
  }
  printf("密码是：");
  puts(b);
  printf("原文是：");
  puts(a);
  return 0;
}

