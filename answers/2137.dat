#include <stdio.h>
#include <stdlib.h>
#define PI 3.14
int main() {
  int i = 1;
  float area = 0, sum = 0;
  while (area < 50) {
    area = PI * i * i;
    if (area < 50) {
      printf("area=%.2f\n", area);
      sum = sum + area;
      i++;
    }
  }
  printf("sum=%.2f\n", sum);
  return 0;
}

