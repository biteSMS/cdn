#include <stdio.h>
#define PI 3.14
#define N 10
int main() {
  int r;
  float area, sum;
  for (r = 1; r <= N; r++) {
    area = PI * r * r;
    if (area < 50) {
      sum += area;
      printf("area=%.2f\n", area);
    } else
      break;
  }
  printf("sum=%.2f\n", sum);
  return 0;
}

