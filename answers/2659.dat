#include <stdio.h>
long fac(int n) {
  if (n == 0)
    return 1;
  else
    return n * fac(n - 1);
}
main() {
  int n, i;
  long sum = 0;
  printf("Input n:");
  scanf("%d", &n);
  for (i = 1; i <= 2 * n - 1; i++) {
    sum += fac(i);
  }
  printf("sum=%ld\n", sum);
}

