#include <stdio.h>

int main() {
  int i, j, n;
  printf("Input n:\n");
  scanf("%d", &n);
  for (i = 0; i < n; i++) {
    for (j = 0; j < n - 1 - i; j++)
      printf(" ");
    for (j = 0; j < 6; j++)
      printf("*");
    printf("\n");
  }

  return 0;
}

