#include <stdio.h>

main() {
  int i, j;
  int n;
  printf("Input n:\n");
  scanf("%d", &n);

  for (i = 1; i <= n; i++) {
    for (j = n - 1; j >= i; j--) {
      printf(" ");
    }
    printf("******\n");
  }
}

