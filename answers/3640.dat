#include <stdio.h>
int main() {
  char str[1000];
  char word[26];
  int word_count[26] = {0};
  char word_p = 'a';
  int i, j;
  gets(str);
  for (i = 0; i < 26; i++) {
    word[i] = word_p;
    word_p += 1;
  }
  for (i = 0; str[i] != '\0'; i++) {
    for (j = 0; j < 26; j++) {
      if (str[i] == word[j])
        word_count[j] += 1;
    }
    for (j = 0; j < 26; j++) {
      if (str[i] == word[j] - 32)
        word_count[j] += 1;
    }
  }
  for (i = 0; i < 26; i++) {
    printf("%c(%c):%d\n", word[i] - 32, word[i], word_count[i]);
  }
}

