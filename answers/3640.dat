#define N 1000
main() {
  int i = -1, n, c[N], j;
  char a[N];
  do {
    i++;
    a[i] = getchar();
  } while (a[i] != '\n');
  for (n = 0; n <= 26; n++) {
    c[n] = 0;
  }
  for (n = 0; n <= i; n++) {
    for (j = 65; j <= 90; j++) {
      if (a[n] == j)
        c[j - 65]++;
      if (a[n] == (j + 32))
        c[j - 65]++;
    }
  }
  for (n = 0; n < 26; n++) {
    printf("%c(%c):%d\n", n + 65, n + 97, c[n]);
  }
}

