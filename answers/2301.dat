#include <stdio.h>
#define N 10
int fun(int *a, int *b, int n) {
  int *c, max = *a, i;
  for (c = a, i = 0; c < a + n; c++, i++) {
    if (*c > max) {
      max = *c;
      *b = i;
    }
  }
  return max;
}
int main() {
  int a[N], i, max, p = 0;
  printf("please  input 10 intergers:\n");
  for (i = 0; i < N; i++) {
    scanf("%d", &a[i]);
  }
  max = fun(a, &p, N);
  printf("max=%d,position=%d\n", max, p);
  return 0;
}

