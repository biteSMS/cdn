#include <stdio.h>
#include <stdlib.h>
int main() {
  char str[100];
  char str1[100];
  int m, i = 0;
  printf("请输入一个字符串：\n");
  gets(str);
  printf("从第几个字符开始复制？");
  scanf("%d", &m);
  while (str[m - 1] != '\0') {
    str1[i] = str[m - 1];
    m++;
    i++;
  }
  str1[i] = '\0';
  printf("复制结果为：%s", str1);
  return 0;
}

