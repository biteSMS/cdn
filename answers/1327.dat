#include <stdio.h>
#include <string.h>
void copy(char a[], int n) {
  int i, j, k;
  k = strlen(a);
  for (i = 0; i < n - 1; i++) {
    for (j = 1; j < k; j++) {
      a[j - 1] = a[j];
    }
    a[k - 1] = '\0';
  }
}

void main() {
  char a[100];
  int n;
  printf("请输入一个字符串：\n");
  gets(a);
  printf("从第几个字符开始复制？");
  scanf("%d", &n);
  copy(a, n);
  printf("复制结果为：");
  puts(a);
}

