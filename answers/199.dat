  MaxMinExchang(a, size);
  printf("Exchange results:");
  PrintData(a, size);
  return 0;
}

void ReadData(int a[], int n) {
  int i;
  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }
}

void MaxMinExchang(int a[], int n) {
  int j, max, min, temp;
  max = min = 0;
  for (j = 1; j < n; j++) {
    if (a[j] > a[max])
      max = j;
    if (a[j] < a[min])
      min = j;
  }
  temp = a[min];
  a[min] = a[max];
  a[max] = temp;
}

void PrintData(int a[], int n) {
  int i;
  for (i = 0; i < n; i++) {
    printf("%5d", a[i]);
  }
}

