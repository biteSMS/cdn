#include <stdio.h>
#include <string.h>

const int size = 20;
void det(char str[], char ch);

void main() {
  char str[size], ch;

  printf("Input a string:");
  scanf("%s", str);
  getchar();
  printf("Input a character:");
  scanf("%c", &ch);

  det(str, ch);

  printf("Results:%s\n", str);
}

void det(char str[], char ch) {
  int i, j;
  for (i = 0; str[i] != '\0'; i++) {
    if (str[i] == ch) {
      for (j = i; str[j] != '\0'; j++) {
        str[j] = str[j + 1];
      }
      j--;
    }
  }
}


