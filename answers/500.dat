  gets(s);
  printf("该字符串的内存编码为：");
  for (i = 0; i < N && s[i] != '\0'; i++) {
    printf(" ");
    if (s[i] >= 0 && s[i] <= 127) {
      printf("%x", s[i]);
    } else {
      printf("%x ", (unsigned char)s[i]);
      printf("%x", (unsigned char)s[i + 1]);
      i++;
    }
  }
