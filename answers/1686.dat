#include <stdio.h>
#include <stdlib.h>

void input(char *a, char *b) {
  int i;
  for (i = 0; *a != '\0'; i++) {
    if (i % 2 != 0) {
      b[i] = ' ';
    } else {
      b[i] = *a;
      a++;
    }
  }
  b[i] = '\0';
}
int main() {
  char a[80], b[160];
  printf("Input a string:");
  scanf("%s", a);

  input(a, b);
  printf("Insert results:%s\n", b);

  return 0;
}

