#include <stdio.h>
#define N 400
void kongge(char str[], char ptr[]) {
  int i, j = 2;
  ptr[0] = str[0];
  for (i = 1; str[i] != '\0'; i++) {
    ptr[j - 1] = ' ';
    ptr[j] = str[i];
    j += 2;
  }
  ptr[j - 1] = '\0';
}
int main() {
  char str[N], ptr[N];
  printf("Input a string:");
  scanf("%s", str);
  kongge(str, ptr);
  printf("Insert results:%s\n", ptr);
}


