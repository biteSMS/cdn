#include <stdio.h>
unsigned long fun(int n);
main() {
  int n;
  unsigned long sum = 0;
  printf("Input n:");
  scanf("%d", &n);
  while (n) {
    sum += fun(n);
    n--;
  }
  printf("The sum is :%u", sum);
}
