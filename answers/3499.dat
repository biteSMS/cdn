#include <string.h>

int main() {
  int h, m;
  printf("请输入h:m\n");
  scanf("%d:%d", &h, &m);
  if (h == 0 && m < 15) {
    printf("时间为：%d:%d", 23, m + 45);
  } else if (h > 0) {
    m = m + 45;
    if (m > 60) {
      h = h + 1;
      m = m - 60;
      printf("时间为：%d:%d", h - 1, m);
    } else {
      printf("时间为：%d:%d", h - 1, m);
    }
  }
  return 0;
}


