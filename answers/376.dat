#include <stdio.h>
int fun(int x, int n) {
  if (n == 1)
    return x;
  return x * fun(x, n - 1);
}
int main() {
  int x, n, sum;
  printf("x=? n=?");
  scanf("%d%d", &x, &n);

  sum = fun(x, n);

  printf("%d**%d=%d\n", x, n, sum);
}

