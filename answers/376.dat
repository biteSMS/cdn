#include <stdio.h>
#include <stdlib.h>

int Pow(int x, int n) {
  if (1 == n)
    return x;
  else
    return Pow(x, n - 1) * x;
}

int main() {
  int x, n, pow;
  printf("x=? n=?");
  scanf("%d %d", &x, &n);
  pow = Pow(x, n);
  printf("%d**%d=%d\n", x, n, pow);
  return 0;
}

