#include <stdio.h>

int main() {
  int i, j, k, count = 0;
  for (i = 1; i <= 9; i++) {
    for (j = 0; j <= 9; j++) {
      for (k = 0; k < 9; k += 2) {
        if (i != j && i != k && j != k && ((100 * i + 10 * j + k) % 2 == 0))
          count++;
      }
    }
  }
  printf("%d\n", count);

  return 0;
}

