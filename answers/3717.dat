#include <stdio.h>
int abs(int x) {
  if (x >= 0)
    return x;
  else
    return -x;
}
int main() {
  int a[3][4], i, j, b[3];
  printf("Please input an 3*4 matrix:\n");
  for (i = 0; i < 3; i++)
    for (j = 0; j < 4; j++)
      scanf("%d", &a[i][j]);
  for (i = 0; i < 3; i++)
    b[i] = abs(a[i][0]) + abs(a[i][1]) + abs(a[i][2]) + abs(a[i][3]);
  j = b[0];
