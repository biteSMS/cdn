#include <math.h>
#include <stdio.h>
#include <stdlib.h>
int prime(int n) {
  int i, flag = 0, k;
  k = sqrt(n);
  for (i = 2; i < k + 1 && !flag; i++) {
    if (n % i == 0)
      flag = 1;
  }
  if (flag == 0)
    return 1;
  else
    return 0;
}
int main() {
  int n, i, count = 0, ret;
  printf("Input n:\n");
  scanf("%d", &n);

  for (i = 11; i < n; i++) {
    if (i < 100) {
      ret = prime(i);
      if (ret == 1) {

        if ((i / 10) == (i % 10)) {
          count++;
          printf("%4d", i);
        }
      }

    } else {
