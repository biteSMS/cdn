#include <stdio.h>
#include <string.h>
void fun(char a[], char b[], int n) {
  int i, j;
  for (i = 0; i < n; i++) {
    b[i] = a[i];
  }
  for (j = n + 1; a[j] != '\0'; j++) {
    b[i++] = a[j];
  }
  b[i] = '\0';
  printf("The new string is :%s\n", b);
}
int main() {
  char a[100], b[100];
  int n;
  printf("Enter the string:\n");
  gets(a);
  printf("Enter the position of the string deleted:");
  scanf("%d", &n);
  fun(a, b, n);
  return 0;
}


