#include <stdio.h>
#include <stdlib.h>

int main() {
  int max = 0, min = 0;
  int a[10] = {};
  int i = 0, j = 0;

  for (i = 0; i < 10; i++)
    scanf("%d", a + i);
  for (i = 0; i < 10; i++) {
    for (j = i + 1; j < 10; j++) {
      if (a[j] < a[min])
        min = j;
      if (a[j] > a[max])
        max = j;
    }
  }
  printf("max=%d, pos=%d\n", a[max], max);
  printf("min=%d, pos=%d\n", a[min], min);

  return 0;
}

