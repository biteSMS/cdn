#include <stdio.h>
void sort(int a[], int n) {
  int i, j, temp;
  for (i = 0; i < n; i++) {
    for (j = i + 1; j < n; j++) {
      if (a[i] < a[j]) {
        temp = a[i];
        a[i] = a[j];
        a[j] = temp;
      }
    }
  }
}
int main() {
  int x, a[4], flag = 1;
  printf("请输入数字：");
  scanf("%d", &x);
  while (x != 6174 && flag == 1) {
    a[0] = x / 1000;
    a[1] = x % 1000 / 100;
    a[2] = x % 100 / 10;
    a[3] = x % 10;
    sort(a, 4);
    if (a[0] == a[1] && a[1] == a[2] && a[2] == a[3]) {
      flag = 0;
      printf("各个位置数字完全相同，不是卡布列克数");
    }
    x = (a[0] * 1000 + a[1] * 100 + a[2] * 10 + a[3]) -
        (a[3] * 1000 + a[2] * 100 + a[1] * 10 + a[0]);
    if (flag != 0)
      printf("%d-%d=%d\n", a[0] * 1000 + a[1] * 100 + a[2] * 10 + a[3],
             a[3] * 1000 + a[2] * 100 + a[1] * 10 + a[0], x);
    if (x == 6174)
      flag = 0;
  }
  return 0;
}


