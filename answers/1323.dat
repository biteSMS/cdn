#include <math.h>
#include <stdio.h>
#include <string.h>
int main() {
  char s[80], c;
  int i, n, sum;
  do {
    printf("输入十六进制数：\n");
    gets(s);
    sum = 0;
    for (i = 0; s[i] != '\0'; i++) {
      if (s[i] >= 'a' && s[i] <= 'f')
        n = s[i] - 'a' + 10;
      else
        n = s[i] - '0';
      sum = sum * 16 + n;
    }
    printf("十进制数%d\n", sum);
    printf("继续吗？\n");
    scanf("%c", &c);
    getchar();
  } while (c == 'y');
  return 0;
}

