#include <stdio.h>
int main() {
  int n, i, j = 0;
  float N, av = 0.00;
  printf("Enter n: ");
  scanf("%d", &n);
  for (i = 1; i <= n; i++) {
    printf("Enter grade #%d: ", i);
    scanf("%f", &N);
    if (N < 60) {
      j++;
    }
    av = av + N;
  }
  printf("Grade average = %.2f\n", (float)av / n);
  printf("Number of failures = %d\n", j);
  return 0;
}

