#include <stdio.h>
#define N 20

int main() {
  int n, i, count = 0;
  double grade[N], sum = 0, aver;
  printf("Enter n: ");
  scanf("%d", &n);
  for (i = 0; i < n; i++) {
    printf("Enter grade #%d: ", i + 1);
    scanf("%lf", &grade[i]);
    sum += grade[i];
    if (grade[i] < 60)
      count++;
  }
  printf("Grade average = %.2f\n", sum / n);
  printf("Number of failures = %d\n", count);

  return 0;
}

