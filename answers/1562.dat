#include <math.h>
#include <stdio.h>
main() {
  float a, b, c, area, s, x, y, z;
  printf("Input a,b,c:\n");
  scanf("%f,%f,%f", &a, &b, &c);
  if (a + b > c && b + c > a && a + c > b) {
    s = (a + b + c) / 2;
    x = s - a;
    y = s - b;
    z = s - c;
    area = sqrt(s * x * y * z);
    printf("area=%.2f\n", area);
  } else
    printf("No triangle!\n");
}

