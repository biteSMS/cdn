#include <stdio.h>
int main() {
  float a, b;
  char ch;
  printf("Enter your expression:");
  scanf("%f%c%f", &a, &ch, &b);
  if (ch == '+') {
    printf("%.2f+%.2f=%.2f\n", a, b, a + b);
  } else if (ch == '-') {
    printf("%.2f-%.2f=%.2f\n", a, b, a - b);
  } else if (ch == '*') {
    printf("%.2f*%.2f=%.2f\n", a, b, a * b);
  } else if (ch == '/') {
    if (0 == b)
      printf("Division by zero\n");
    else
      printf("%.2f/%.2f=%.2f\n", a, b, a / b);
  } else
    printf("Unknown operator.\n");
  return 0;
}

