#include <stdio.h>
int main() {
  int a[10] = {1, 3, 4, 5, 6, 7, 8, 8, 9, 45};
  int n, m, l = 0, h = 9;
  printf("Input the num: \n");
  scanf("%d", &n);
  while (l <= h) {
    m = (l + h) / 2;
    if (n > a[m])
      l = m + 1;
    if (n < a[m])
      h = m - 1;
    if (n == a[m]) {
      printf("Find success! Position is No.%d", m + 1);
      exit(0);
    }
  }
  printf("No find!\n");
}


