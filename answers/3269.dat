#include <stdlib.h>

int main() {
  int num[10] = {1, 3, 4, 5, 6, 7, 8, 8, 9, 45};
  int n, i;
  printf("Input the num: \n");
  scanf("%d", &n);
  for (i = 0; i < 10; i++) {
    if (n == num[i]) {
      printf("Find success! Position is No.%d", i + 1);
      break;
    }
  }
  if (i == 10)
    printf("No find!\n");
  return 0;
}

