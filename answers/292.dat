#include <stdio.h>
void Average(int score[], int n) {
  int average;
  int sum = 0, i;
  for (i = 0; i < n; i++) {
    sum = sum + score[i];
  }
  average = sum / n;
  printf("Average score is %d\n", average);
}
int main() {
  int score[1000];
  int i = 0;
  do {
    printf("Input score:");
    scanf("%d", &score[i]);
    i = i + 1;
    getchar();
  } while (score[i - 1] >= 0);
  printf("Total students are %d\n", i - 1);
  Average(score, i - 1);
  return 0;
}


