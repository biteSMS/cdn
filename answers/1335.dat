  int j;
  printf("Input a line of characters:\n");
  gets(b);
  for (j = 0; j < size; j++) {
    if (b[j] == 'a')
      a++;
    else if (b[j] == 'e')
      e++;
    else if (b[j] == 'i')
      i++;
