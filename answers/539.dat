#define N 40
int main() {
  int n, i, a[N], sum = 0;
  printf("Input n:");
  scanf("%d", &n);
  printf("Input score:");
  for (i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }
  for (i = 0; i < n; i++)
    sum += a[i];
  printf("Average score is %d\n", sum / n);
  return 0;
}

