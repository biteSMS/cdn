#include <stdlib.h>
#define N 20
void MaxMinExchang(int a[], int n) {
  int temp_keep, keep_max = 0, keep_min, i = 0;
  int max = a[0], min = a[0];
  for (i = 0; i < n; i++) {
    if (a[i] > max) {
      max = a[i];
      keep_max = i;
    }
    if (a[i] < min) {
      min = a[i];
