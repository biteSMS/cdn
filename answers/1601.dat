#include <stdio.h>
void MaxMinExchang(int a[], int n) {
  int max, min, pmax = 0, pmin = 0, i;
  max = a[0], min = a[0];
  for (i = 1; i < n; i++) {
    if (a[i] > max) {
      max = a[i];
      pmax = i;
    }

    else if (a[i] < min) {
      min = a[i];
      pmin = i;
    }
  }
  a[pmax] = min;
  a[pmin] = max;
}
int main() {
  int a[10], i;

  printf("Input 10 numbers:");

  for (i = 0; i < 10; i++) {
    scanf("%d", &a[i]);
  }

  MaxMinExchang(a, 10);

  printf("Exchang results:");
  for (i = 0; i < 10; i++) {
    printf("%4d", a[i]);
  }

  return 0;
}

