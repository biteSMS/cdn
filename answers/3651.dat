#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define M 30

void Fun(char *string, int length) {
  int i = 0;
  char temp;
  for (i = 0; i < (length / 2); i++) {
    temp = string[i];
    string[i] = string[length - 1 - i];
    string[length - 1 - i] = temp;
  }
}

int main() {
  char string[M];
  printf("Please Enter String1:\n");
  gets(string);
  Fun(string, strlen(string));
  printf("Result is:\n%s\n", string);
  // puts(string);
  return 0;
}

