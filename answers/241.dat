#include <stdio.h>
#include <stdlib.h>

int guess(int sum) {
  int flag = 0;
  int a, b, c;
  for (a = 1; a < 10; a++)
    for (b = 1; b < 10; b++)
      for (c = 1; c < 10; c++) {
        if (a * 100 + b * 200 + c * 200 + a * 20 + b * 10 + c * 20 + a * 2 +
                b * 2 + c ==
            sum) {
          flag = a * 100 + b * 10 + c;
        }
      }
  return flag;
}
int main() {
  int n, sum = 0;
  printf("Input a sum:");
  scanf("%d", &sum);

  n = guess(sum);

  if (!n)
    printf("The sum you calculated is wrong!\n");
  else
    printf("The number is %d\n", n);

  return 0;
}

