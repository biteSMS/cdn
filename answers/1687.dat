#include <stdio.h>
#include <string.h>
void BB(char *p, char N) {
  int i, k;
  char *q;
  for (; *p != '\0'; p++) {
    if (*p == N) {
      for (q = p; *q != '\0'; q++)
        *q = *(q + 1);
      p--;
    }
  }
}
void main() {
  char a[20], N;
  char *p = a;
  printf("Input a string:");
  gets(p);
  printf("Input a character:");
  scanf("%c", &N);
  BB(p, N);
  printf("Results:%s\n", p);
}

