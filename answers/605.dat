#include <stdio.h>
int main() {
  int n = 0, i = 0, sum;
  for (n = 2; n < 1000; n++) {
    sum = 0;
    for (i = 1; i < n; i++) {
      if (n % i == 0) {
        sum += i;
      }
    }
    if (sum == n) {
      printf("\n%5d\n", n); // factors表示因子
      for (i = 1; i < n; i++) {
        if (n % i == 0) {
          printf("%5d", i);
        }
      }
    }
  }
  return 0;
}

