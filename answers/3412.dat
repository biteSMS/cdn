#include <stdio.h>
#include <string.h>
void input(char a[]) {
  int i, j, n = strlen(a);
  for (i = 1; i < n; i = i + 2) {
    for (j = n; j >= i; j--) {
      a[j + 1] = a[j];
    }
    a[j + 1] = '*';
    n++;
  }
}
void main() {
  char a[200];
  printf("请输入需要处理的字符串：");
  gets(a);
  input(a);
  printf("处理后的字符串：");
  puts(a);
}


