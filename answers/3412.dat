#include <stdio.h>
main() {
  char a[10];
  char b[10];
  printf("请输入需要处理的字符串：");
  gets(a);
  int i, j, k;
  k = strlen(a);
  for (i = 0, j = 0; i < (k - 1); i++, j++) {
    b[j] = a[i];
    j++;
    b[j] = '*';
  }
  b[j] = a[k - 1];
  b[j + 1] = '\0';
  printf("处理后的字符串：");
  puts(b);
}

