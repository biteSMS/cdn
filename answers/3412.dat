#include <stdio.h>
#define N 100
int main() {
  char a[N], b[2 * N];
  char i = 1, k;
  printf("请输入需要处理的字符串：");
  gets(a);
  b[0] = a[0];
  k = 1;
  while (a[i] != '\0') {
    if (k % 2 == 0) {
      b[k] = a[i];
      i++;
    } else {
      b[k] = '*';
    }
    k++;
  }
  b[k] = '\0';
  printf("处理后的字符串：");
  puts(b);
  return 0;
}

