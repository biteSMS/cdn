#include <stdio.h>
#include <stdlib.h>
void Convert(int a[][4], int b[][3]) {
  int i, j;
  for (i = 0; i < 3; i++) {
    for (j = 0; j < 4; j++) {
      b[j][i] = a[i][j];
    }
  }
}
int main() {
  int a[3][4], b[4][3];
  int i, j;
  for (i = 0; i < 3; i++) {
    for (j = 0; j < 4; j++) {
      scanf("%d", &a[i][j]);
    }
  }
  Convert(a, b);
  for (i = 0; i < 4; i++) {
    for (j = 0; j < 3; j++) {
      printf(" %4d", b[i][j]);
    }
    printf("\n");
  }
  return 0;
}


