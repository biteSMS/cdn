#include <math.h>
#include <stdio.h>
float fun(float num) {
  int i = 1, j = 1;
  float pi = 0;
  for (i; (float)1 / i >= num; i += 2, j++) {
    pi += pow(-1, j + 1) * 1 / i;
  }
  pi = pi * 4;
  return pi;
}
main() {
  float n1, n2;
  printf("Enter a float number: ");
  scanf(" %f", &n1);
  n2 = fun(n1);
  printf("%6.4f\n ", n2);
}

