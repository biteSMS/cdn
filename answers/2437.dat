#include <stdlib.h>
#include <string.h>
int main() {
  char name[6][10] = {"abc", "bbc", "ccc", "Hello", "John", "Tome"};
  char name1[10];
  int flag = 0, i;
  printf("请输入一行字符：");
  gets(name1);
  for (i = 0; i < 6; i++) {
    if (strcmp(name1, name[i]) == 0) {
      flag = 1;
    }
  }

  if (flag)
