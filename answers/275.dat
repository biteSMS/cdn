#include <stdio.h>
#include <stdlib.h>

int GetAboveAver(int score[], int n) {
  int sum, aver, count, i;
  sum = aver = count = 0;
  for (i = 0; i < n; i++)
    sum += score[i];
  aver = sum / n;
  for (i = 0; i < n; i++) {
    if (score[i] >= aver)
      count++;
  }
  return count;
}
int main() {
  const int size = 40;
  int score[size], i = 0, count;
  do {
    scanf("%d", &score[i++]);
  } while (score[i - 1] >= 0);
  count = GetAboveAver(score, i - 1);
  printf("Students of above average is %d\n", count);
  return 0;
}

