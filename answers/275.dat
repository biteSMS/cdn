#include <stdio.h>
#include <stdlib.h>
#define N 40
float getaver(int score[], int n) {
  int sum = 0, i;
  for (i = 0; i < n; i++) {
    sum += score[i];
  }
  return (float)sum / n;
}
int GetAboveAver(int score[], int n) {
  int aver = getaver(score, n);
  int i, count = 0;
  for (i = 0; i < n; i++) {
    if (score[i] >= aver)
      count++;
  }
  return count;
}
int main() {
  int student_score[N], i = 0, aver_sum;
  scanf("%d", &student_score[i]);
  while (student_score[i] >= 0) {
    i++;
    scanf("%d", &student_score[i]);
  }
  aver_sum = GetAboveAver(student_score, i);
  printf("Students of above average is %d\n", aver_sum);
  return 0;
}

