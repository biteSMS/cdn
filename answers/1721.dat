#include <stdio.h>
#include <stdlib.h>

int main() {
  float x, y;
  char op, key_word;
  printf("Please enter the expression:\n");
  scanf("%f %c%f", &x, &op, &y);
  do {
    switch (op) {
    case '+':
      printf("%f + %f = %f\n", x, y, x + y);
      break;
    case '-':
      printf("%f - %f = %f\n", x, y, x - y);
      break;
    case '*':
      printf("%f * %f = %f\n", x, y, x * y);
      break;
    case '/':
      if (y == 0) {
        printf("Division by zero!\n");
      } else {
        printf("%f / %f = %f\n", x, y, x / y);
      }
      break;
    default:
      printf("Unknown operator!\n");
    }
    printf("Do you want to continue(Y/N or y/n)?");
    scanf(" %c", &key_word);
    if (key_word == 'Y' || key_word == 'y') {
      printf("Please enter the expression:\n");
      scanf("%f %c%f", &x, &op, &y);
    } else
      break;
  } while (1);
  return 0;
}

