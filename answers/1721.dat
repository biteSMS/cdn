#include <stdio.h>
main() {
  float m, n, s;
  char op, r;
  int flag;
  printf("Please enter the expression:\n");
  scanf("%f %c%f", &m, &op, &n);
  do {
    switch (op) {
    case '+':
      s = m + n;
      printf("%f + %f = %f\n", m, n, s);
      break;
    case '-':
      s = m - n;
      printf("%f - %f = %f\n", m, n, s);
      break;
    case '*':
      s = m * n;
      printf("%f * %f = %f\n", m, n, s);
      break;
    case '/':
      if (n == 0)
        printf("Division by zero!\n");
      else {
        s = m / n;
        printf("%f / %f = %f\n", m, n, s);
      }
      break;
    default:
      printf("Unknown operator!\n");
      break;
    }
    printf("Do you want to continue(Y/N or y/n)?");
    scanf(" %c", &r);
    if (r == 'y' || r == 'Y') {
      flag = 1;
      printf("Please enter the expression:\n");
      scanf("%f %c%f", &m, &op, &n);
    } else if (r == 'n' || r == 'N')
      flag = 0;
  } while (flag);
}


