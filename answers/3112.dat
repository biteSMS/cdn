#include <stdio.h>
#include <stdlib.h>
#define N 100
int counter =
    0; //最重要的是把没有数到5的个数打个记号，作为全局变量。就可以重新循环时候可以从打记号处开始。
void luzhishen(int a[], int n) {
  int i, j;
  for (i = 0; i <= n - 1; i++) {
    if (a[i] != 0) {
      counter++;
    }
    if (counter % 5 == 0) {
      a[i] = 0;
    }
    if (counter == 495) {
      for (i = 0; i < n - 1; i++) {
        if (a[i] != 0) {
          printf("%d\n", i + 1);
          return;
        }
      }
    }
  }
  luzhishen(a, n);
}
int main() {
  int a[N], n = 100, i;
  for (i = 0; i <= n - 1; i++) {
    a[i] = 1;
  }
  luzhishen(a, 100);
  return 0;
}

