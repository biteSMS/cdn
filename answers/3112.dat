#include <stdio.h>

int main() {
  int a[100] = {0};
  int i, n, j, k; // i是99个馒头
  // n是代表和尚编号
  // j是指一次跳5个人,若其中k也就是3个人,已经分了，那么n要再加1
  //表示跳过此人
  for (i = 0, n = 4; i < 99; i++, n = n + 5) {
    if (n >= 100)
      n = n - 100;
    k = 3;
    j = n - 1;
    while (k--) {
      if (a[j--] == 1)
        n++;
    }

    while (a[n] == 1) {
      n++;
      if (n >= 100) {
        n = n - 100;
      }
    }
    a[n] = 1;
  }

  for (i = 0; i < 100; i++) {
    if (a[i] == 0)
      printf("%d\n", i - 40);
  }
}


